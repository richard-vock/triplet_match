#ifndef _TRIPLET_MATCH_TRIPLET_FEATURE_
#define _TRIPLET_MATCH_TRIPLET_FEATURE_

namespace triplet_match {

struct discrete_feature : Eigen::Matrix<unsigned int, 4, 1> {
};

struct discretization_params {
    float distance_step_count;
    float angle_step;
};

template <typename Point>
discrete_feature
compute_discrete(const Point& p1, const Point& p2, discretization_params params, float min_dist, float dist_range);

} // triplet_match

#include "impl/triplet_feature.hpp"

#endif /* _TRIPLET_MATCH_TRIPLET_FEATURE_ */

